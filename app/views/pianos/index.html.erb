<div class="navbar">
  <p class="new_btn">
    <%= link_to "Submit a piano", new_piano_url, :id => "nav_btn" %>
  </p>

  <p class="back_home_btn">
    <%= link_to "Home", root_path, :id => "nav_btn" %>
  </p>
</div>

<div class="content">

  <h1>Pianos</h1>
    <div class="row piano_list">
      <% @pianos.each do |piano| %>
        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 card">
          <%= cl_image_tag "Placeholder", :id => "piano" %>
          <div class="info">
            <%= link_to piano.address, piano_path(piano) %>
          </div>
        </div>
      <% end %>
    </div>
  <div class="index_map">
    <div
      id="map"
      style="
      width: 100%;
      height: 50vh;
      "
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>


