<div class="show_content">
  <h2><%= @piano.address %></h2>

  <p>
  <%= link_to "Edit", edit_piano_url(@piano)%>
  </p>

  <p>
  <%= link_to "Delete", piano_path(@piano),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </p>

  <p>
  <%= link_to "Back", pianos_path %>
  </p>
</div>

<div class="show_map">
  <div
    id="map"
    style="
    width: 100%;
    height: 100vh;
    "
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
